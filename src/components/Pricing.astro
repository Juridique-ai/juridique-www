---
const costPerRequest = [
  { module: "Analyse de contrat", cost: "0.03€ - 0.15€" },
  { module: "Création d'entreprise", cost: "0.03€ - 0.15€" },
  { module: "Assistant juridique", cost: "0.02€ - 0.10€" },
  { module: "Correspondance", cost: "0.02€ - 0.05€" },
];
---

<section id="tarifs" class="py-24 relative">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="headline-lg mb-6">
        Le droit est un <span class="text-danger">luxe</span>.<br/>
        <span class="text-gradient">Plus maintenant.</span>
      </h2>
    </div>

    <!-- Main comparison - VISCERAL -->
    <div class="max-w-3xl mx-auto mb-16">
      <div class="grid sm:grid-cols-2 gap-6">
        <!-- Old way -->
        <div class="p-8 rounded-2xl bg-danger/10 border-2 border-danger/30 text-center">
          <div class="text-sm uppercase tracking-wider text-danger mb-4">Avocat traditionnel</div>
          <div class="text-6xl sm:text-7xl font-black text-danger strike mb-2">200€</div>
          <div class="text-text-muted">par heure</div>
          <div class="mt-6 text-sm text-text-muted">
            Délai: 2-4 semaines<br/>
            Disponible: heures de bureau
          </div>
        </div>

        <!-- New way -->
        <div class="p-8 rounded-2xl bg-gradient-to-br from-primary/15 to-secondary/10 border-2 border-primary text-center glow">
          <div class="text-sm uppercase tracking-wider text-primary mb-4">Juridique AI</div>
          <div class="text-6xl sm:text-7xl font-black text-gradient mb-2">0.10€</div>
          <div class="text-text-muted">par analyse</div>
          <div class="mt-6 text-sm text-text-muted">
            Délai: 30 secondes<br/>
            Disponible: 24h/24, 7j/7
          </div>
        </div>
      </div>

      <!-- The punchline -->
      <div class="text-center mt-12">
        <div class="text-5xl sm:text-6xl font-black text-gradient text-glow mb-2">2000×</div>
        <div class="text-xl text-text-muted">moins cher</div>
        <p class="mt-4 text-text-muted">
          1 heure d'avocat = <strong class="text-white">2000 analyses IA</strong>
        </p>
      </div>
    </div>

    <!-- Detailed pricing -->
    <div class="max-w-2xl mx-auto">
      <div class="glass-light rounded-2xl p-8">
        <h3 class="text-lg font-semibold mb-6 text-center">Coût par analyse</h3>
        <div class="space-y-4">
          {costPerRequest.map((item) => (
            <div class="flex items-center justify-between py-3 border-b border-white/10 last:border-0">
              <span class="text-text-muted">{item.module}</span>
              <span class="font-mono font-semibold text-primary">{item.cost}</span>
            </div>
          ))}
        </div>
        <p class="text-center text-sm text-text-muted mt-6">
          Payez uniquement ce que vous utilisez. Pas d'abonnement, pas de frais cachés.
        </p>
      </div>
    </div>
  </div>
</section>
