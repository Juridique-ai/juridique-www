---
const navLinks = [
  { href: "#modules", label: "Modules" },
  { href: "#conformite", label: "Avantages" },
  { href: "#tarifs", label: "Tarifs" },
];

const appUrl = "https://aoli-juridique-prod-frontend.azurewebsites.net";
---

<header class="fixed top-0 left-0 right-0 z-50 glass">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group">
        <div class="w-9 h-9 rounded-xl bg-gradient-to-br from-primary to-secondary flex items-center justify-center transition-transform group-hover:scale-110">
          <span class="text-background font-bold text-sm">JA</span>
        </div>
        <span class="font-bold text-lg hidden sm:block">Juridique AI</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-text-muted hover:text-text transition-colors text-sm font-medium"
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- CTA -->
      <div class="flex items-center gap-4">
        <a
          href={appUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-primary text-background font-semibold text-sm hover:bg-primary-light transition-colors"
        >
          Essayer
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12" />
            <polyline points="12 5 19 12 12 19" />
          </svg>
        </a>
      </div>
    </div>
  </nav>
</header>
