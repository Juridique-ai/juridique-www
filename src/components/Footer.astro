---
const currentYear = new Date().getFullYear();
const appUrl = "https://aoli-juridique-prod-frontend.azurewebsites.net";

const links = [
  { label: "Modules", href: "#modules" },
  { label: "Conformité", href: "#conformite" },
  { label: "Tarifs", href: "#tarifs" },
];

const jurisdictions = ["France", "Belgique", "Luxembourg", "Allemagne", "Suisse"];
---

<footer class="py-12 border-t border-border">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-4 gap-8 mb-12">
      <!-- Brand -->
      <div class="md:col-span-2">
        <a href="/" class="flex items-center gap-2 mb-4">
          <div class="w-8 h-8 rounded-lg bg-primary flex items-center justify-center">
            <span class="text-background font-bold text-sm">JA</span>
          </div>
          <span class="font-semibold text-lg">Juridique AI</span>
        </a>
        <p class="text-text-muted text-sm max-w-sm">
          Assistance juridique intelligente pour l'Europe.
          Analysez vos contrats, créez votre entreprise, obtenez des conseils juridiques.
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="font-semibold mb-4">Navigation</h4>
        <ul class="space-y-2">
          {links.map((link) => (
            <li>
              <a href={link.href} class="text-text-muted hover:text-text transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
          <li>
            <a href={appUrl} target="_blank" rel="noopener noreferrer" class="text-primary hover:text-primary-light transition-colors text-sm">
              Accéder à l'app →
            </a>
          </li>
          <li>
            <a href="/presentation.html" target="_blank" class="text-text-muted hover:text-text transition-colors text-sm">
              Présentation investisseurs
            </a>
          </li>
        </ul>
      </div>

      <!-- Jurisdictions -->
      <div>
        <h4 class="font-semibold mb-4">Juridictions</h4>
        <ul class="space-y-2">
          {jurisdictions.map((j) => (
            <li class="text-text-muted text-sm">{j}</li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="pt-8 border-t border-border flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-text-muted text-sm">
        © {currentYear} Juridique AI. Tous droits réservés.
      </p>
      <div class="flex items-center gap-4 text-text-muted text-sm">
        <span class="flex items-center gap-1">
          <span class="w-2 h-2 rounded-full bg-primary"></span>
          Hébergé en Europe
        </span>
        <span>•</span>
        <span>Conforme RGPD</span>
        <span>•</span>
        <span>Conforme AI Act</span>
      </div>
    </div>
  </div>
</footer>
